<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android" >



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_insert_equipment"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:text="Insert New Equipment"
        android:background="?attr/selectableItemBackgroundBorderless"/>

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_insert_trainer"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="Insert New Trainer"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_get_membership"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="Get Membership"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_show_customers"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="Display All Customers"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_select_trainer"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="Select Your Trainer"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </FrameLayout>



    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorAccent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_logout"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:text="Logout"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </FrameLayout>


</LinearLayout>
